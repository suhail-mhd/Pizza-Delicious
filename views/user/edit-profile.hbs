<div class="row my-5">
  <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="row glass-blur py-5">
        <div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                {{!-- <div class="card"> --}}
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt=""
                                class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{User.name}}</h4>
                                {{!-- <button class="btn btn-primary">Follow</button> --}}
                            </div>
                        </div>
                    </div>
                {{!-- </div> --}}
                <div class="mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/profile">My Profile</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/view-address">Address</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/order-status"> My Orders</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap">
                            <a href="/coupons-offers">Coupons and Offers</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap">
                            <a href="/wallet">Wallet</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="row justify-content-center align-items-center h-100">
                        <div class="col-12 col-lg-9 col-xl-7">
                            <div class="shadow-2-strong card-registration" style="border-radius: 15px;">
                                <div class="card-body p-4 p-md-5">
                                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit profile</h3>
                                    <form method="post" id="registration_form" action="/edit-profile">
                                        <div class="row item">
                                            <div class="col-md-12 mb-4">
                                                <div class="form-outline">
                                                    <span class="error_form" id="fname_error_message"></span>
                                                    <label class="form-label" for="firstName">Name</label>
                                                    <input type="text" id="form_fname" name="firstname"
                                                        value="{{userDetails.name}}"
                                                        class="form-control-lg" style="font-size: 14px;border-radius:20px" />
                                                </div>
                                            </div>
                                            {{!-- <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <span class="error_form" id="lname_error_message"></span>
                                                    <input type="text" id="form_sname" name="lastname"
                                                        value="{{userDetails.lastname}}"
                                                        class="form-control-lg" style="font-size: 14px;border-radius:20px" />
                                                    <label class="form-label" for="lastName">Last Name</label>
                                                </div>
                                            </div> --}}

                                        </div>
                                        <div class="row item">
                                            <div class="col-md-12 mb-4">
                                                <div class="form-outline">
                                                    <span class="error_form" id="email_error_message"></span>
                                                    <label class="form-label" for="lastName">Email ID</label>
                                                    <input type="email" id="form_email" name="email"
                                                        value="{{userDetails.email}}" class="form-control-lg"  style="width: 100%;font-size: 14px;border-radius:20px" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-4">
                                                <div class="form-outline">
                                                    <span class="error_form" id=""></span>
                                                    <label class="form-label" for="lastName">Date of Birth</label>
                                                        <input type="date" name="dob" value="{{userDetails.dob}}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row item">
                                            <div class="col-md-12 mb-4">
                                                {{#if numExistError}}
                                                <div class="text-danger">{{numExistError}}</div>
                                                {{/if}}
                                                <div class="form-outline">
                                                    <span class="error_form" id="mob_error_message"></span>
                                                    <label class="form-label" for="lastName">Mobile Number</label>
                                                    <input type="tel " id="form_mob" name="mobno" value="{{userDetails.mobno}}"
                                                        class="form-control-lg" style="font-size: 14px;border-radius:20px" />
                                                </div>
                                            </div>
                                             <div class="col-md-12 mb-4">
                                                <div class="form-outline">
                                                    <label class="form-label" for="lastName">Alternative
                                                        Number</label>
                                                    <input type="tel " id="" name="altermobno" value="{{userDetails.altermobno}}"
                                                        class="form-control-lg" style="font-size: 14px;border-radius:20px" />
                                                </div>
                                            </div>
                                             <input type="hidden" name="id" value="{{userDetails._id}}" >
                                        </div>
                                        <div class="">
                                            <input class="btn btn-success" type="submit" value="Save Details" />
                                        </div>
                                    </form>
                                </div>
                                <div class="" style="margin-left: 10px;margin-bottom: 10px;">
                                    <a href="/change-password" class="btn btn-danger">Change Password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    body {
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }
