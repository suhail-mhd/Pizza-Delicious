<div class="row my-5">
  <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="row glass-blur py-5">
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                {{!-- <div class="card"> --}}
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt=""
                                class="rounded-circle" width="150">
                            {{!-- <form action="">
                                <lable>change profile picture</lable>
                               <input type="file" class="" id="customFile" name="profilepic" /> 
                            </form> --}}
                            {{!-- <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 50px;height:50px;"
                                    id="imgview"> --}}
                            <div class="mt-3">
                                <h4>{{User.name}}</h4>
                            </div>
                        </div>
                    </div>
                {{!-- </div> --}}
                <div class="mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/profile" style="color: #FAC564;">My Profile</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/view-address">Address</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/order-status"> My Orders</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap mb-2">
                            <a href="/coupons-offers">Coupons and Offers</a>
                        </li>
                        <li class="d-flex justify-content-between align-items-center flex-wrap">
                            <a href="/wallet">Wallet</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{User.name}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{User.email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{User.mobno}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Date of Birth</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if User.dob}}
                                {{User.dob}}
                                {{else}}
                                <p>- Not Added -</p>
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Alternative Mobile</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if User.altermobno}}
                                {{User.altermobno}}
                                {{else}}
                                <p>- Not Added -</p>
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-primary" href="/edit-profile/{{User._id}}"><i class="bi bi-pen"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
    </div>
  </div>
</div>

