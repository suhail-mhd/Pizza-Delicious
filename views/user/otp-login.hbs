<section class="sec">
  <div class="colour"></div>
  <div class="colour"></div>
  <div class="colour"></div>
  <div class="box">
    <div class="square" style="--i:0;"></div>
    <div class="square" style="--i:1;"></div>
    <div class="square" style="--i:2;"></div>
    <div class="square" style="--i:3;"></div>
    <div class="square" style="--i:4;"></div>
    <div class="container glass">
      <div class="form">
        <h2>Login With OTP</h2>
        {{#if error}}
          <p style="color: red;"> {{error}}</p>
        {{/if}}
        <form action="/otp-login" method="post">
          {{!-- {{#if Error}}
            <label for="" style="color: red;">{{Error}}</label>
          {{/if}} --}}
          <div class="input__box">
            <input type="tel" name="number" placeholder="Mobile Number" />
          </div>
          {{! <div class="input__box hidden">
            <input type="text" id="codeInput" placeholder="OTP" />
          </div> }}
          <div class="input__box d-flex">
            <input type="submit" style="width: 159px;" value="Generate OTP" />
          </div>
        </form>

      </div>
    </div>
  </div>
</section>

