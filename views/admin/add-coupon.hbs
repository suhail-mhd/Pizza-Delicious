<main id="main" class="main">

  <div class="pagetitle">
    <h1>Add Coupon</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Coupons</li>
        <li class="breadcrumb-item active">Add Coupon</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <div class="main_content_iner overly_inner glass-blur">
    <div class="container-fluid mt-5  p-5 " style="border-radius: 25px; ">
        <section>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-center">Add Coupons</h2>
                        <form action="/admin/add-coupons" method="post" id="coupon_form" enctype="multipart/form-data">
                            <div class="row gx-3">
                            <div class="col-lg-6  mb-6">
                            <label class="form-label">Coupon Code</label>
                            <input id="form_couponcode" name="couponcode" type="text"
                                placeholder="Type here" required>
                            <h5 class="error_form text-danger" id="couponcode_error_message"></h5>

                            <p id="ccodeerr" class="text-danger"></p>
                        </div> <!-- col .// -->

                        <div class="col-6 mb-6">
                        <label class="form-label">Discount %</label>
                        <input id="pvalue" name="discount" type="number" placeholder="Type here" required/>
                        <h5 class="error_form text-danger" id="discount_error_message"></h5>
                      <p id="cvalueerr" class="text-danger"></p>
                    </div>
                        <div class="col-lg-12  mb-6">
                            <label class="form-label">Coupon description</label>
                            <input id="form_description" name="description" type="text"
                                placeholder="Type here" required>
                            <h5 class="error_form text-danger" id="description_error_message"></h5>
                            <p id="cdeserr" class="text-danger"></p>

                        </div>
                        <div class="col-lg-6 mb-6">
              <label class="form-label">Expiry</label>
              <input id="form_expiry" name="expiry"  type="date"  required/>
                <h5 class="error_form text-danger" id="expiry_error_message"></h5>
            </div>
                            <button type="submit" class="btn btn-warning mt-4 ">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

</main><!-- End #main -->

