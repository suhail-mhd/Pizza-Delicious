                                                                    "number": "2021.0001",
                                                                    // Invoice data
                                                                    "date": "12-12-2021"
                                                                },
                                                                "products": [
                                                                {{#each this.products}}
                                                                    {
                                                                        "quantity": "{{this.quantity}}",
                                                                        "description": "{{this.name}}",
                                                                        "tax": 6,
                                                                        "price": '{{this.totalAmount}}'
                                                                    },
