<main id="main" class="main">

  <div class="pagetitle">
    <h1>Category List</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active">Category List</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="main_content_iner">
          <div class="container-fluid p-0">
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                  <div class="white_card_header">
                    <div class="box_header m-0">
                      <div class="main-title">
                        {{!-- <h3 class="m-0">Category List</h3> --}}
                      </div>
                    </div>
                  </div>
                  <div class="white_card_body">
                    <div class="QA_section">
                      <div class="white_box_tittle list_header">
                        <div class="box_right d-flex lms_block">
                          <div class="serach_field_2">
                            <div class="search_inner">
                              <form Active="#">
                                {{!-- <div class="search_field">
                                  <input
                                    type="text"
                                    placeholder="Search content here..."
                                  />
                                </div>
                                <button type="submit">
                                  <i class="ti-search"></i>
                                </button>
                              </form> --}}
                            </div>
                          </div>
                          <div class="add_button ml-auto mb-3">
                            <a href="/admin/addcategory" type="submit"><button
                                type="button"
                                class="btn btn-warning"
                              >Add Category</button></a>
                          </div>
                        </div>
                      </div>

                      <div class="card glass-blur p-3">
                        <div class="card-body">
                          <div class="QA_table mb_30">
                            <!-- table-responsive -->
                            <table class="table lms_table_active3 text-light" id="productTable">
                              <thead>
                                <tr>
                                  <th class="text-warning" scope="col">No</th>
                                  <th class="text-warning" scope="col">Category</th>
                                  <th class="text-warning" scope="col">Manage</th>
                                </tr>
                              </thead>
                              <tbody>
                                {{#each category}}
                                  <tr>
                                    <th class="text-light" scope="row">{{inc @index}}</th>
                                    <td>{{this.catname}}</td>
                                    <td>
                                      <a
                                        href="/admin/editcategorey/{{this._id}}"
                                        type="submit"
                                      ><button
                                          type="button"
                                          class="btn btn-primary"
                                        ><i class="bi bi-pen"></i></button></a>
                                      <a
                                        href="/admin/deletecategory/{{this._id}}"
                                        type="submit"
                                      ><button
                                          type="button"
                                          class="btn btn-danger"
                                        ><i class='bx bx-trash'></i></button></a>
                                    </td>
                                  </tr>
                                {{/each}}
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</main><!-- End #main -->